#!/usr/bin/env bash
# a comment explaining what it is doing
while IFS=":" read -r username _ userid groupid userinfo homedir shell; do
    # Extract password from /etc/shadow
    password=$(grep "^$username:" /etc/shadow | cut -d: -f2)
    # Display information in the specified format
    echo "The user $username is part of the $groupid gang, lives in $homedir, and rides $shell."
    echo "User ID's place is protected by the passcode $password, more info about the user here: $userid $userinfo"
done < "/etc/passwd"
