#!/usr/bin/env bash
# a comment explaining what it is doing
while IFS=":" read -r username _ userid groupid userinfo homedir shell; do
    # Display information in the specified format
    echo "The user $username is part of the $groupid gang, lives in $homedir, and rides ${shell:-N/A}."
    echo "${userid:-N/A}'s place is protected, more info about the user here: ${userinfo:-N/A}"
done < "/etc/passwd"
