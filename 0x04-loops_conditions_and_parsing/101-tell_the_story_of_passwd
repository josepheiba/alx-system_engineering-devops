#!/usr/bin/env bash
# a comment explaining what it is doing
while read -r username password uid gid user_info home shell; do
    user_id_info=$(grep "^$uid:" /etc/group | cut -d: -f1)
    echo "The user $username is part of the $gid gang, lives in $home and rides $shell. User $uid's place is protected by the passcode $password, more info about the user here: $user_id_info"
done < /etc/passwd
